<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:MyCSharpLib.Wpf.Controls">

    <ControlTemplate x:Key="StringEditorTemplate" TargetType="{x:Type controls:SimpleTypeEditor}">
        <TextBox Text="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
    </ControlTemplate>

    <ControlTemplate x:Key="CharEditorTemplate" TargetType="{x:Type controls:SimpleTypeEditor}">
        <TextBox MaxLength="1" Text="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
    </ControlTemplate>

    <ControlTemplate x:Key="StringEditorTemplate" TargetType="{x:Type controls:SimpleTypeEditor}">
        <TextBox Text="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
    </ControlTemplate>
</ResourceDictionary>